<Window x:Class="JsonToXml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JsonToXml"
        mc:Ignorable="d"
        Title="MainWindow" Height="Auto" Width="Auto">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button Margin="12" Content="Upload files" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Click="Button_Click"/>
            <ListView Name="LV_Logs" Height="496">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Message" Width="401"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        


    </Grid>
</Window>
